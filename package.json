{
  "name": "vscode-deno",
  "displayName": "%deno.displayName%",
  "description": "%deno.description%",
  "version": "1.23.0",
  "publisher": "justjavac",
  "icon": "deno.png",
  "galleryBanner": {
    "color": "#3B3738",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justjavac/vscode-deno"
  },
  "bugs": {
    "url": "https://github.com/justjavac/vscode-deno/issues"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "deno"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "workspaceContains:**/.denorc",
    "workspaceContains:**/.denoignore",
    "workspaceContains:**/mod.ts",
    "onCommand:deno.init",
    "onCommand:deno.cache",
    "onCommand:deno.types",
    "onCommand:deno.test",
    "onCommand:deno.enable",
    "onCommand:deno.disable"
  ],
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-deno-plugin",
        "enableForWorkspaceTypeScriptVersions": false
      }
    ],
    "commands": [
      {
        "command": "deno.restartDenoServer",
        "title": "Restart Deno Language server",
        "category": "Deno"
      },
      {
        "command": "deno.enable",
        "title": "%deno.command.enable%",
        "category": "Deno"
      },
      {
        "command": "deno.disable",
        "title": "%deno.command.disable%",
        "category": "Deno"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Deno",
      "properties": {
        "deno.enable": {
          "type": "boolean",
          "default": true,
          "description": "%deno.config.enabled%"
        },
        "deno.alwaysShowStatus": {
          "type": "boolean",
          "default": true,
          "description": "%deno.config.alwaysShowStatus%",
          "scope": "window"
        },
        "deno.tsconfig": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The location to tsconfig.json"
        },
        "deno.importmap": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "%deno.config.importmap%"
        },
        "deno.log": {
          "type": "string",
          "enum": [
            "off",
            "terse",
            "normal",
            "verbose"
          ],
          "default": "terse",
          "description": "Enables logging of the Deno server to a file. This log can be used to diagnose Deno Server issues. The log may contain file paths, source code, and other potentially sensitive information from your project."
        }
      }
    },
    "languages": [
      {
        "id": "ignore",
        "filenames": [
          ".denoignore"
        ]
      },
      {
        "id": "jsonc",
        "filenames": [
          ".denorc"
        ],
        "filenamePatterns": [
          "denorc.*.json"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".denorc",
        "url": "./schemas/denorc.schema.json"
      },
      {
        "fileMatch": "denorc.*.json",
        "url": "./schemas/denorc.schema.json"
      }
    ]
  },
  "main": "./client/out/extension",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc -b && rollup -c",
    "watch": "tsc -b -w",
    "postinstall": "vscode-install && cd client && yarn && cd ../server && yarn && cd ..",
    "package": "rm -rf dist && ./scripts/build.sh",
    "check": "deno fmt  client/src server/src schemas --check",
    "format": "deno fmt client/src server/src schemas"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@types/node": "^13.13.5",
    "@types/which": "^1.3.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "rollup": "^2.8.2",
    "typescript": "3.8.3",
    "vsce": "^1.75.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "typescript-deno-plugin": "^1.14.0"
  }
}
