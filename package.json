{
  "name": "vscode-deno",
  "displayName": "%deno.displayName%",
  "description": "%deno.description%",
  "version": "1.5.0",
  "publisher": "justjavac",
  "icon": "deno.png",
  "galleryBanner": {
    "color": "#3B3738",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justjavac/vscode-deno"
  },
  "bugs": {
    "url": "https://github.com/justjavac/vscode-deno/issues"
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "deno"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "workspaceContains:**/.denorc",
    "workspaceContains:**/.denoignore",
    "onCommand:deno.init",
    "onCommand:deno.recompile",
    "onCommand:deno.types",
    "onCommand:deno.prefetch",
    "onCommand:deno.fmt",
    "onCommand:deno.enable",
    "onCommand:deno.disable"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-deno-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "commands": [
      {
        "command": "deno.enable",
        "title": "%deno.command.enable%",
        "category": "deno"
      },
      {
        "command": "deno.disable",
        "title": "%deno.command.disable%",
        "category": "deno"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Deno",
      "properties": {
        "deno.enable": {
          "type": "boolean",
          "default": true,
          "description": "%deno.config.enabled%"
        },
        "deno.packageManager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm",
          "description": "%deno.config.packageManager%"
        },
        "deno.alwaysShowStatus": {
          "type": "boolean",
          "default": true,
          "description": "%deno.config.alwaysShowStatus%",
          "scope": "window"
        },
        "deno.autoFmtOnSave": {
          "type": "boolean",
          "default": false,
          "description": "%deno.config.autoFmtOnSave%"
        },
        "deno.dtsPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "%deno.config.dtsPath%"
        }
      }
    },
    "languages": [
      {
        "id": "ignore",
        "filenames": [
          ".denoignore"
        ]
      },
      {
        "id": "jsonc",
        "filenames": [
          ".denorc"
        ],
        "filenamePatterns": [
          "denorc.*.json"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".denorc",
        "url": "./schemas/denorc.schema.json"
      },
      {
        "fileMatch": "denorc.*.json",
        "url": "./schemas/denorc.schema.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/deno.json"
      }
    ],
    "configurationDefaults": {
      "[typescript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "justjavac.vscode-deno"
      },
      "[markdown]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "justjavac.vscode-deno"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "check": "deno fmt src schemas snippets",
    "format": "deno fmt src schemas snippets --check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^13.11.1",
    "@types/which": "^1.3.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "typescript": "^3.8.3",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "execa": "^4.0.0",
    "typescript-deno-plugin": "^1.3.0",
    "vscode-nls": "^4.1.2",
    "which": "^2.0.2"
  }
}
